<%= simple_form_for (@contact), :html => { :class => 'form-horizontal'} do |f| %>

    <div class="row">

      <div class="form-group col-xs-12 col-sm-12 col-md-12">
        <%= f.label :nom, :class => 'col-xs-2 col-sm-2 col-md-2' %>
        <%= f.text_field :nom, :autofocus => true, :placeholder => 'Votre nom', :class => 'col-xs-10 col-sm-10 col-md-10' %>
      </div>

      <div class="form-group col-xs-12 col-sm-12 col-md-12">
        <%= f.label :email, :class => 'col-xs-2 col-sm-2 col-md-2' %>
        <%= f.text_field :email, :placeholder => 'ex : contact@kippondream.com', :class => 'col-xs-10 col-sm-10 col-md-10' %>
      </div>

      <div class="form-group col-xs-12 col-sm-12 col-md-12">
        <%= f.label :objet, :class => 'col-xs-2 col-sm-2 col-md-2' %>
        <%= f.text_field :objet, :placeholder => 'ex : Concours, dream cup...', :class => 'col-xs-10 col-sm-10 col-md-10' %>
      </div>

      <div class="form-group col-xs-12 col-sm-12 col-md-12">
        <%= f.label :message, :class => 'col-xs-2' %>
          <%= f.text_area :message, :placeholder => 'Tapez votre message ici', :class => 'col-xs-10' %>
      </div>

      <%= f.submit 'Envoyer', { class: 'pull-right btn-envoyer' } %>

